# Configuration principale LOGPIPE-RELAY
# Copiez ce fichier vers .env et ajustez les valeurs

# Répertoires de base
DATA_ROOT=/opt/logpipe-relay/data
STATE_DIR=/opt/logpipe-relay/state
LOG_DIR=/opt/logpipe-relay/logs
TMP_DIR=/opt/logpipe-relay/tmp

# Répertoire de partage pour les fichiers extraits (optionnel)
# Si défini, tous les fichiers extraits seront déplacés vers SHARE_DIR/<server>/
# après traitement.
# Exemple Linux : SHARE_DIR=/mnt/share/logs
# Exemple Windows : SHARE_DIR=Z:\\logs\\share
SHARE_DIR=

# Configuration retry
MAX_RETRY_COPY=3
MAX_RETRY_EXTRACT=3
RETRY_DELAY_BASE=60
RETRY_DELAY_MAX=3600
RETRY_BACKOFF_MULTIPLIER=2

# Configuration rsync
RSYNC_TIMEOUT=300
RSYNC_OPTIONS=-avz --partial

# Configuration extraction
GZIP_VALIDATE=True
EXTRACT_DELETE_SOURCE=False

# Configuration logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_ROTATION=True
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

